#include <stdio.h>

int recursive_series(int n)
{
    if (n <= 1)
        return 1;

    if (n % 2 == 0)
        return 1 + recursive_series(n / 2) + 2;
        
    
    else
        return 1 + recursive_series(n - 1) * 3;
        
}

int main()
{
    int n=0;
    scanf("%d", &n);

    int result = recursive_series(n);
    printf("%d\n", result);

    return 0;
}
