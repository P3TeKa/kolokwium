#include <stdio.h>

int process_number(int n) {
    
    int i=0;
    int count=0;
    while (n>1)
    {
        i=n%3;
        if (i==0)
        {
            n=n/3;
        }
        else if (i==1)
        {
            n=n+5;
        }
        else if (i==2)
        {
            n=n-1;
        }
        count++;
    }
    

    return count;
}

int main() {
    int n;
    do
    {
        scanf("%d", &n);
    } while (n<=0);

    int result = process_number(n);
    printf("%d\n", result);
    return 0;
}
